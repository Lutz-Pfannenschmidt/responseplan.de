---
import Layout from "../layouts/Layout.astro";
---

<Layout title="ResponsePlan | 404">
    <div class="hero min-h-full">
        <div class="hero-content text-center">
            <div class="max-w-md">
                <h1
                    class="text-4xl md:text-5xl lg:text-6xl font-bold rotating-gradient inline-block text-transparent bg-clip-text"
                >
                    Error 404
                </h1>
                <p class="py-6">
                    The page you are looking for does not exist. <br />
                    Maybe the bad guys took it. ¯\_(ツ)_/¯
                </p>
                <a href="/" class="btn rotating-gradient"
                    >Go back to the Homepage</a
                >
            </div>
        </div>
    </div>
</Layout>

<style>
    .rotating-gradient {
        background-image: linear-gradient(
            126deg,
            rgb(84, 13, 131) 0%,
            rgb(143, 38, 38) 50%,
            rgb(20, 24, 156) 100%
        );
        background-size: 400% 400%;
        animation: gradient 10s ease infinite;
    }

    @keyframes gradient {
        0% {
            background-position: 0 50%;
        }
        50% {
            background-position: 100% 50%;
        }
        100% {
            background-position: 0 50%;
        }
    }
</style>
