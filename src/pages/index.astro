---
import Layout from "../layouts/Layout.astro";
---

<Layout title="ResponsePlan">
    <div class="hero min-h-full">
        <div class="hero-content text-center">
            <div class="max-w-md">
                <h1
                    class="text-4xl md:text-5xl lg:text-6xl font-bold rotating-gradient inline-block text-transparent bg-clip-text"
                >
                    ResponsePlan
                </h1>
                <p class="py-6">
                    is an incident response network scanning tool designed to
                    visually represent your networks and individual machines.
                </p>
                <a href="/install" class="btn rotating-gradient">Get Started</a>
            </div>
        </div>
    </div>
</Layout>

<style>
    .rotating-gradient {
        background-image: linear-gradient(
            126deg,
            rgb(84, 13, 131) 0%,
            rgb(143, 38, 38) 50%,
            rgb(20, 24, 156) 100%
        );
        background-size: 400% 400%;
        animation: gradient 10s ease infinite;
    }

    @keyframes gradient {
        0% {
            background-position: 0 50%;
        }
        50% {
            background-position: 100% 50%;
        }
        100% {
            background-position: 0 50%;
        }
    }
</style>
