---
import Navbar from "../components/navbar.astro";
import Creator from "../components/creator.astro";
import Footer from "../components/footer.astro";

const { frontmatter } = Astro.props;
---

<!doctype html>
<html lang="en" class="overflow-x-hidden" data-theme="business">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <!-- Default Favicon -->
        <link rel="icon" href="/white.svg" type="image/svg+xml" />
        <link
            rel="icon"
            href="/black.svg"
            type="image/svg+xml"
            media="(prefers-color-scheme: light)"
        />
        <link
            rel="icon"
            href="/white.svg"
            type="image/svg+xml"
            media="(prefers-color-scheme: dark)"
        />
        <meta name="generator" content={Astro.generator} />
        <title>{frontmatter.title} | ResponsePlan</title>
    </head>
    <div class="min-h-[100svh] h-[100svh] w-screen flex flex-col">
        <Navbar />
        <main class="flex-grow prose w-[90%] md:w-2/3 lg:w-1/2 mx-auto my-4">
            <slot />
        </main>
        <Creator />
        <Footer />
    </div>


</html>
